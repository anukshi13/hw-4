<h1 class="mb-4">New Entry</h1>

<div class="card p-4 shadow-sm">
  <form action="/entries" method="post" enctype="multipart/form-data">
    <input type="hidden" name="place_id" value="<%= params["place_id"] %>">

    <div class="mb-3">
      <label for="title" class="form-label">Title:</label>
      <input type="text" name="title" id="title" class="form-control">
    </div>

    <div class="mb-3">
      <label for="description" class="form-label">Description:</label>
      <textarea name="description" id="description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
      <label for="occurred_on" class="form-label">Occurred On:</label>
      <input type="date" name="occurred_on" id="occurred_on" class="form-control">
    </div>

    <div class="mb-3">
      <label for="image" class="form-label">Upload Image (Optional):</label>
      <input type="file" name="image" id="image" class="form-control">
    </div>

    <button type="submit" class="btn btn-primary w-100">Save Entry</button>
  </form>
</div>
